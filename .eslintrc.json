{
  "env": {
    "vitest-globals/env": true
  },
  "extends": [
    "@rocketseat/eslint-config/node",
    "plugin:vitest-globals/recommended"
  ],
  "rules": {
    "no-use-before-define": "off",
    "no-useless-constructor": "off",
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false,
        "endOfLine": "auto",
        "tabWidth": 2
      }
    ]
  }
}